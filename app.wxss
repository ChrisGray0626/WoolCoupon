/**app.wxss**/


.container {
  display: flex;
  height: 100%;
  width: 100%;
  flex-direction: column;
  align-items: center;
} 

.layout_horizontal{
  height: 100rpx;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
} 

.layout_vertical{
  height: 100rpx;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: column;
}

.bottom{
  position: fixed;
  bottom: 0;
}

.top{
  position: fixed;
  top: 0;
}

.left{
  position: fixed;
  left: 0;
}

.right{
  position: fixed;
  right: 0;
}

.layout_center{
  position: fixed;
  justify-content: center;
  align-items: center;
  align-content: center;
  justify-items: center;
}
.center{
  display: flex;
  height:100%;
  width: 100%;
  justify-content: center;
  align-items: center;
}

.bar{
  position: fixed;
  display: flex;
  width: 100%;
  z-index: 1;
  top: 0;
  left: 0;
  flex-direction: column;
}

.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 20px;
  padding: 10px;
  align-items: center;
  background: #FFFFFF;
}