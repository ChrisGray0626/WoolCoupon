/**index.wxss**/
@import "/wxSearch/wxSearch.wxss";

.container {
  position: relative;
  display: flex;
  height: 100%;
  width: 100%;
  top: 200rpx;
  flex-direction: column;
  align-items: center;
  background-color: #e9eaec;
}
.list{
  display: flex;
  width: 100%;
  padding: 1rpx;
  flex-direction: row;
}
.product{
  display: flex;
  height: 100%;
  width: 100%;
  padding: 10rpx;
  flex-direction: column;
  align-items: center;  
  background-color: #FFFFFF;
  border: thin solid #e9eaec; 
  border-radius: 10rpx;
}
.img{
  display: flex;
  height: 500rpx;
  width: 330rpx;
  padding: 5rpx;
}