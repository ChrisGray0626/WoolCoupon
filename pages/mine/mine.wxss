.user-info {
    box-sizing: border-box;
    width: 750rpx;
    height: 400rpx;
    padding: 30rpx 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    background-color: #999;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    color: #666;
}
.user-nickname {
    color: #fff;
    font-size: 40rpx;
    text-shadow: 1px 1px 0 rgba(0, 0, 0, .6);
}
.user-avatar {
    width: 200rpx;
    height: 200rpx;
    border-radius: 200rpx;
    box-shadow: 0 0 300rpx 100rpx rgba(255, 255, 255, .2), 0 1px 0 rgba(255, 255, 255, 0.4);
}
.button{
  margin: 0;
  font-size: 35rpx;
  background: white;
}
.button::after{
  border: none;
}  